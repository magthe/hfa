# Maintainer: Magnus Therning <magnus@therning.org>

pkgname=pandoc-crossref
pkgver=0.3.4.0
pkgrel=100
pkgdesc="Pandoc filter for cross-references"
arch=('x86_64')
url='http://www.haskell.org/cabal/'
license=('GPL2')
makedepends=('cabal-install' 'stack' 'unzip')
depends=('pandoc')
options=('strip' 'staticlibs')
source=("http://hackage.haskell.org/packages/archive/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.gz"
        "stack.yaml")
sha256sums=('ff5515e76884aa0d7f9991fc22853622b185a92f940084d2d396133eddc56e97'
            'e98bbc889b09511cbbe6103399e2570245e38454b08d5d74f022c64852348d5a')

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  cp "${srcdir}/stack.yaml" .
  stack update
  stack setup
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  stack build --dependencies-only
  stack \
        exec ghc-pkg -- list | grep pkgdb | awk '{print "--package-db=" $0}' > db-paths
  stack \
        exec --no-ghc-package-path cabal -- configure \
        $(cat db-paths) \
        --prefix=/usr --docdir="/usr/share/doc/${pkgname}"
  stack \
        exec --no-ghc-package-path cabal -- build
}

check() {
  true
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  stack \
        exec --no-ghc-package-path cabal -- copy \
        --destdir="${pkgdir}"

  rm -fr "${pkgdir}/usr/lib"
}
